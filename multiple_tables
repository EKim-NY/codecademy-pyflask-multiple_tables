-- Cross Join Exercise 

SELECT COUNT(*) 
FROM newspaper
WHERE start_month <=3 
  AND end_month >=3; 

SELECT * 
FROM newspaper 
CROSS JOIN months 
LIMIT 5; 

SELECT * 
FROM newspaper 
CROSS JOIN months 
WHERE start_month <= month 
  AND end_month >= month 
LIMIT 5; 

SELECT month, COUNT(*) AS 'subscribers'
FROM newspaper
CROSS JOIN months 
WHERE start_month <= month 
  AND end_month >= month 
GROUP BY month; 

-- Union exercise 

SELECT * 
FROM newspaper 
UNION 
SELECT * 
FROM online; 

-- WITH statement

WITH previous_query AS (
  SELECT customer_id, 
  COUNT(subscription_id) AS 
    'subscriptions'
  FROM orders
  GROUP BY customer_id 
)
SELECT 
  customers.customer_name,                 
  previous_query.subscriptions
FROM previous_query
JOIN customers 
  ON customers.customer_id = 
     previous_query.customer_id; 

-- Multiple JOIN statement 

SELECT orders.customer_id, 
    customers.customer_name,    
    subscriptions.description,              
    subscriptions.price_per_month
FROM orders
JOIN subscriptions 
ON subscriptions.subscription_id = 
   orders.subscription_id 
JOIN customers 
ON customers.customer_id = orders.customer_id
LIMIT 5; 

-- LEFT JOIN statement 

SELECT * 
FROM customers 
LEFT JOIN subscriptions 
WHERE subscriptions.description IS NOT NULL
LIMIT 5;

SELECT * 
FROM customers 
LEFT JOIN orders
WHERE subscription_id IS NOT NULL 
GROUP BY customers.customer_name; 

SELECT COUNT(*) 
FROM subscriptions 
LEFT JOIN orders
WHERE subscriptions.description = 'Sports Magazine'; 

